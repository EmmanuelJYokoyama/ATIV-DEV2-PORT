<script src="https://cdn.tailwindcss.com"></script>
<%- include("partials/navbar") %>

<section class="min-h-screen flex flex-col items-start bg-gradient-to-b from-violet-900 to-violet-300 px-8 py-16">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold text-white mb-12">Meus Projetos</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-12">
      <% projects.forEach(project => { %>
        <div class="project bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all w-full max-w-2xl mx-auto">
          <h3 class="text-3xl font-bold text-indigo-800 mb-4"><%= project.title %></h3>
          <p class="text-gray-600 text-lg font-bold mb-6"><%= project.description %></p>
          <a href="<%= project.link %>" class="text-blue-500 text-lg font-bold hover:underline">Ver mais</a>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include("partials/footer") %>
