<section id="projects" class="projects py-16 bg-gradient-to-t from-violet-700 via-violet-500 to-violet-400">
    <div class="container mx-auto">
      <h2 class="text-4xl font-bold text-center mb-8">Meus Projetos</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        <% portfolio.projects.forEach(project => { %>
          <div class="project bg-white p-4 rounded shadow-lg">
            <h3 class="text-2xl font-bold mb-2"><%= project.title %></h3>
            <p class="mb-4"><%= project.description %></p>
            <a href="<%= project.link %>" class="text-blue-500 hover:underline">Ver mais</a>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
  