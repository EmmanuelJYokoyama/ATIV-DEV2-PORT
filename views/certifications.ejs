<script src="https://cdn.tailwindcss.com"></script>
<%- include("partials/navbar") %>

<section id="certifications" class="min-h-screen flex flex-col items-center bg-gradient-to-b from-violet-900  to-violet-200 px-4">
  <h2 class="text-4xl font-bold text-white mb-8">Todas as Certificações</h2>
  <div class="container mx-auto text-center">
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 justify-center">
      <% certifications.forEach(cert => { %>
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition-all w-80">
          <h3 class="text-2xl font-bold text-indigo-800 mb-4"><%= cert.title %></h3>
          <p class="text-gray-600 mb-4"><%= cert.description %></p>
        </div>
      <% }) %>
    </div>
  </div>
</section>
